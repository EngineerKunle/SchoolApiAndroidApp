<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_student_view_container"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingTop="@dimen/padding_norm"
    android:paddingLeft="@dimen/padding_norm"
    android:paddingRight="@dimen/padding_norm"
    android:paddingBottom="@dimen/padding_norm">

    <TextView
        android:id="@+id/view_first_name"
        android:text="@string/all_students_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/view_surname"
        android:text="@string/all_students_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_students_age"/>

</LinearLayout>